<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="skin.ccm-lite"
  version="0.4"
  name="CCM-lite"
  provider-name="Mudislander, seanet7or">
  <requires>
    <import addon="xbmc.gui" version="4.0.0"/>
	<import addon="service.skin.widgets" version="0.0.25"/>
	<import addon="script.favourites" version="4.0.9"/>
	<import addon="script.tvtunes" version="3.0.6"/>
	<import addon="script.globalsearch" version="1.1.1"/>
	<import addon="script.artistslideshow" version="1.5.0"/>
	<import addon="script.artwork.downloader" version="12.0.15"/>
	<import addon="script.simpleplaylists" version="1.1.0"/>
	<import addon="script.randomandlastitems" version="2.1.5"/>
  </requires>
  <extension
    point="xbmc.gui.skin"
    debugging="false"
    effectslowdown="0.75">
    <res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">A modded version of Jezz_X's Confluence skin</summary>
    <description lang="en">A mod of XBMC's default skin, incorporating many of the now popular tweaks, addons and scripts. The main focus lies on a simple and light user interface, that runs smoothly on low end devices such as the Raspberry Pi.</description>
    <disclaimer lang="en">Thanks to Jezz_X and Mudislander.</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
