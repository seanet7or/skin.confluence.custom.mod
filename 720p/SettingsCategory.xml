				<posx>300</posx>
				<posy>20</posy>
				<width>740</width>
				<height>30</height>
				<font>font16</font>
				<label>$INFO[Control.GetLabel(2)] - $LOCALIZE[5]</label>
			</control>
			<control type="grouplist" id="5">
				<description>control area</description>
				<posx>290</posx>
				<posy>70</posy>
				<width>750</width>
				<height>530</height>
				<itemgap>-1</itemgap>
				<pagecontrol>60</pagecontrol>
				<onleft>3</onleft>
				<onright>60</onright>
