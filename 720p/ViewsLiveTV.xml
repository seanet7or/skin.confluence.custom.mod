<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="LiveTVView1">
		<control type="group">
			<visible>Control.IsVisible(560)</visible>
			<control type="list" id="560">
				<posx>70</posx>
				<posy>75</posy>
				<width>760</width>
				<height>561</height>
				<onleft>2</onleft>
				<onright>60</onright>
				<onup>560</onup>
				<ondown>560</ondown>
				<viewtype label="$LOCALIZE[4]">list</viewtype>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
				<visible>Container.Content(LiveTV)</visible>
				<itemlayout height="40" width="760">
					<control type="label">
						<width>730</width>
						<height>40</height>
						<font>font13</font>
						<label>$INFO[ListItem.Plot]</label>
					</control>
					<control type="label">
						<posx>750</posx>
						<width>700</width>
						<height>40</height>
						<align>right</align>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>
				<focusedlayout height="40" width="760">
					<control type="image">
						<width>760</width>
						<height>41</height>
						<texture>buttons/fo_light.png</texture>
						<visible>Control.HasFocus(560)</visible>
					</control>
					<control type="label">
						<width>730</width>
						<height>40</height>
						<font>font13</font>
						<textcolor>textfocus</textcolor>
						<label>$INFO[ListItem.Plot]</label>
					</control>
					<control type="label">
						<posx>750</posx>
						<width>700</width>
						<height>40</height>
						<align>right</align>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<posx>862</posx>
				<posy>78</posy>
				<height>560</height>
				<onleft>560</onleft>
				<onright>2</onright>
				<visible>Control.IsVisible(560)</visible>
			</control>
			<control type="group">
				<visible>Control.IsVisible(560)</visible>
				<posx>910</posx>
				<posy>80</posy>
				<control type="image">
					<posx>10</posx>
					<width>290</width>
					<height>290</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<fadetime>IconCrossfadeTime</fadetime>
					<texture background="true">$INFO[ListItem.Icon]</texture>
				</control>
				<control type="fadelabel">
					<posx>10</posx>
					<posy>300</posy>
					<width>290</width>
					<label>$INFO[ListItem.Label2]</label>
					<textcolor>heading2</textcolor>
					<pauseatend>1000</pauseatend>
				</control>
				<control type="textbox">
					<description>Description Value for TV Show</description>
					<posy>330</posy>
					<width>290</width>
					<height>220</height>
					<label>$VAR[VideoDescription]</label>
					<autoscroll time="2000" delay="3000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
				</control>
			</control>
		</control>
	</include>
</includes>