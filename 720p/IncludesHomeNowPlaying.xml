<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="MediaNowPlaying">
		<control type="group">
			<posx>0</posx>
			<posy>60</posy>
			<animation effect="slide" start="0,0" end="0,175" time="0" condition="!Skin.HasSetting(RaiseMainMenuBar)">Conditional</animation>
			<visible>Player.HasAudio</visible>
			<include>Window_OpenClose_Animation</include>
			<control type="image">
				<description>Cover image</description>
				<posx>20</posx>
				<posy>45</posy>
				<width>130</width>
				<height>295</height>
				<aspectratio aligny="bottom">keep</aspectratio>
				<texture fallback="DefaultAlbumCover.png">$INFO[Player.Art(thumb)]</texture>
			</control>
			<control type="image">
				<posx>170</posx>
				<posy>210</posy>
				<width>132</width>
				<height>52</height>
				<texture>$INFO[Player.FolderPath,,../logo.png]</texture>
				<aspectratio aligny="bottom" align="left">keep</aspectratio>
				<visible>![Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding]</visible>
			</control>
			<control type="label">
				<description>Album Label</description>
				<posx>170</posx>
				<posy>265</posy>
				<height>25</height>
				<width>1000</width>
				<label>$INFO[MusicPlayer.Artist,, - ]$INFO[MusicPlayer.Album]$INFO[musicplayer.discnumber, - $LOCALIZE[427]:]</label>
			</control>
			<control type="label">
				<description>Title label</description>
				<posx>170</posx>
				<posy>285</posy>
				<width>1000</width>
				<label>$INFO[MusicPlayer.Title]</label>
				<font>font13_title</font>
			</control>
			<control type="label">
				<description>Time Label</description>
				<posx>170</posx>
				<posy>310</posy>
				<width>300</width>
				<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
			</control>
		</control>
		<control type="group">
			<posx>490r</posx>
			<posy>70</posy>
			<animation effect="slide" start="0,0" end="0,175" time="0" condition="!Skin.HasSetting(RaiseMainMenuBar)">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="200" condition="Window.IsActive(Favourites)">conditional</animation>
			<visible>StringCompare(Container(9000).ListItem.Property(PanelType),LiveTV) + [PVR.IsRecording | PVR.HasNonRecordingTimer]</visible>
			<include>Window_OpenClose_Animation</include>
			<control type="group">
				<animation effect="slide" start="0,0" end="0,100" time="0" condition="PVR.IsRecording">conditional</animation>
				<visible>PVR.HasNonRecordingTimer</visible>
				<control type="image">
					<posx>400</posx>
					<width>80</width>
					<height>80</height>
					<aspectratio>keep</aspectratio>
					<texture background="true" fallback="DefaultVideoCover.png">$INFO[PVR.NextRecordingChannelIcon]</texture>
				</control>
				<control type="image">
					<posx>365</posx>
					<posy>5</posy>
					<width>25</width>
					<height>25</height>
					<aspectratio>keep</aspectratio>
					<texture>PVR-HasTimer.png</texture>
				</control>
				<control type="label">
					<description>Next Timer Header label</description>
					<posx>355</posx>
					<posy>5</posy>
					<height>25</height>
					<width>400</width>
					<label>$LOCALIZE[19157]</label>
					<align>right</align>
					<font>font12_title</font>
					<textcolor>heading2</textcolor>
				</control>
				<control type="label">
					<description>NextRecordingDateTime</description>
					<posx>390</posx>
					<posy>30</posy>
					<height>25</height>
					<width>400</width>
					<label>$INFO[PVR.NextRecordingDateTime,$LOCALIZE[19126] - ]</label>
					<align>right</align>
					<scroll>true</scroll>
				</control>
				<control type="label">
					<description>NextRecordingTitle Channel</description>
					<posx>390</posx>
					<posy>50</posy>
					<height>25</height>
					<width>800</width>
					<label>$INFO[PVR.NextRecordingTitle][COLOR=textnofocus]$INFO[PVR.NextRecordingChannel, - (,)][/COLOR]</label>
					<align>right</align>
					<font>font12_title</font>
					<scroll>true</scroll>
				</control>
			</control>
			<control type="group">
				<visible>PVR.IsRecording</visible>
				<control type="image">
					<posx>400</posx>
					<width>80</width>
					<height>80</height>
					<aspectratio>keep</aspectratio>
					<texture background="true" fallback="DefaultVideoCover.png">$INFO[PVR.NowRecordingChannelIcon]</texture>
				</control>
				<control type="image">
					<posx>360</posx>
					<posy>5</posy>
					<width>30</width>
					<height>25</height>
					<aspectratio>keep</aspectratio>
					<texture>PVR-IsRecording.png</texture>
				</control>
				<control type="label">
					<description>Is Recording Header label</description>
					<posx>350</posx>
					<posy>5</posy>
					<height>25</height>
					<width>400</width>
					<label>$LOCALIZE[19158]</label>
					<align>right</align>
					<font>font12_title</font>
					<textcolor>heading2</textcolor>
				</control>
				<control type="label">
					<description>NextRecordingDateTime</description>
					<posx>390</posx>
					<posy>30</posy>
					<height>25</height>
					<width>400</width>
					<label>$INFO[PVR.NowRecordingDateTime,$LOCALIZE[19126] - ]</label>
					<align>right</align>
					<scroll>true</scroll>
				</control>
				<control type="label">
					<description>NextRecordingTitle Channel</description>
					<posx>390</posx>
					<posy>50</posy>
					<width>800</width>
					<label>$INFO[PVR.NowRecordingTitle][COLOR=textnofocus]$INFO[PVR.NowRecordingChannel, - (,)][/COLOR]</label>
					<align>right</align>
					<font>font12_title</font>
					<scroll>true</scroll>
				</control>
			</control>
		</control>
		<control type="group">
			<posx>0</posx>
			<posy>50</posy>
			<animation effect="slide" start="0,0" end="0,175" time="0" condition="!Skin.HasSetting(RaiseMainMenuBar)">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="200" condition="Window.IsActive(Favourites)">conditional</animation>
			<visible>Player.HasVideo</visible>
			<include>Window_OpenClose_Animation</include>
			<control type="group">
				<visible>!VideoPlayer.Content(Movies) + !VideoPlayer.Content(Episodes) + !VideoPlayer.Content(LiveTV)</visible>
				<control type="image">
					<description>Cover image</description>
					<posx>20</posx>
					<posy>45</posy>
					<height>300</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<texture fallback="DefaultVideoCover.png">$INFO[Player.Art(thumb)]</texture>
				</control>
				<control type="label">
					<description>Title label</description>
					<posx>190</posx>
					<posy>285</posy>
					<width>1000</width>
					<label>$INFO[VideoPlayer.Title]</label>
					<font>font13_title</font>
				</control>
				<control type="label">
					<description>Time Label</description>
					<posx>190</posx>
					<posy>310</posy>
					<width>300</width>
					<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
				</control>
			</control>
			<control type="group">
				<visible>VideoPlayer.Content(LiveTV)</visible>
				<control type="image">
					<description>Cover image</description>
					<posx>20</posx>
					<posy>45</posy>
					<width>120</width>
					<height>300</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<texture fallback="DefaultVideoCover.png">$INFO[Player.Art(thumb)]</texture>
				</control>
				<control type="label">
					<description>Channel label</description>
					<posx>160</posx>
					<posy>265</posy>
					<height>25</height>
					<width>660</width>
					<label>$INFO[VideoPlayer.ChannelName]</label>
				</control>
				<control type="label">
					<description>Title label</description>
					<posx>160</posx>
					<posy>285</posy>
					<width>1000</width>
					<label>$INFO[VideoPlayer.Title]</label>
					<font>font13_title</font>
				</control>
				<control type="label">
					<description>Time Label</description>
					<posx>160</posx>
					<posy>310</posy>
					<width>300</width>
					<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
				</control>
			</control>
			<control type="group">
				<visible>VideoPlayer.Content(Movies)</visible>
				<control type="image">
					<description>Cover image</description>
					<posx>20</posx>
					<posy>45</posy>
					<width>120</width>
					<height>300</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<texture fallback="DefaultVideoCover.png">$INFO[Player.Art(thumb)]</texture>
				</control>
				<control type="label">
					<description>Studio label</description>
					<posx>160</posx>
					<posy>265</posy>
					<height>25</height>
					<width>1000</width>
					<label>$INFO[VideoPlayer.Studio]</label>
				</control>
				<control type="label">
					<description>Title label</description>
					<posx>160</posx>
					<posy>285</posy>
					<width>1000</width>
					<label>$INFO[VideoPlayer.Title]$INFO[VideoPlayer.Year,[COLOR=textnofocus] (,)[/COLOR]]</label>
					<font>font13_title</font>
				</control>
				<control type="label">
					<description>Time Label</description>
					<posx>160</posx>
					<posy>310</posy>
					<width>300</width>
					<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
				</control>
			</control>
			<control type="group">
				<visible>VideoPlayer.Content(Episodes)</visible>
				<control type="image">
					<description>Cover image</description>
					<posx>20</posx>
					<posy>225</posy>
					<width>180</width>
					<height>120</height>
					<aspectratio>scale</aspectratio>
					<texture fallback="DefaultVideoCover.png">$INFO[Player.Art(thumb)]</texture>
				</control>
				<control type="label">
					<description>TV Show Season Ep Label</description>
					<posx>210</posx>
					<posy>265</posy>
					<height>25</height>
					<width>1000</width>
					<label>$INFO[VideoPlayer.TVShowTitle] ($LOCALIZE[20373] $INFO[VideoPlayer.Season] - $LOCALIZE[20359] $INFO[VideoPlayer.episode])</label>
				</control>
				<control type="label">
					<description>Title label</description>
					<posx>210</posx>
					<posy>285</posy>
					<width>1000</width>
					<label>$INFO[VideoPlayer.Title]</label>
					<font>font13_title</font>
				</control>
				<control type="label">
					<description>Time Label</description>
					<posx>210</posx>
					<posy>310</posy>
					<width>300</width>
					<label>$INFO[Player.Time]$INFO[Player.Duration, / ]</label>
				</control>
			</control>
		</control>
	</include>
</includes>