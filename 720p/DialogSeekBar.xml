					<posx>110r</posx>
					<posy>40r</posy>
					<width>240</width>
					<height>20</height>
					<align>right</align>
					<font>font10_title</font>
					<textcolor>blue</textcolor>
					<label>31045</label>
					<visible>Player.Rewinding</visible>
