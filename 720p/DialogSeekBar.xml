			<animation effect="slide" end="0,175" time="0" tween="back" easing="out" condition="Window.IsVisible(home) + !Skin.HasSetting(RaiseMainMenuBar)" reversible="true">Conditional</animation>
			<posx>520r</posx>
			<posy>-6</posy>
			<control type="group">
				<posx>105r</posx>
				<posy>50r</posy>
				<control type="image">
					<posx>10</posx>
					<width>80</width>
					<height>50</height>
					<texture>OSDSeekFrame.png</texture>
				</control>
